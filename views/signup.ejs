<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
</head>

<div class="container">
  <div class="alert bg-success my-3">
    <h3 class="text-center" style="color: white">Create New Employee</h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <form action="/employee/signup" method="post">
        <div class="field my-3">
          <label for="" class="form-label">Enter First Name : </label>
          <input
            type="text"
            class="form-control"
            name="first_name"
            placeholder="Enter First Name"
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Enter Last Name : </label>
          <input
            type="text"
            class="form-control"
            name="last_name"
            placeholder="Enter Last name"
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Enter Mobile No. : </label>
          <input
            type="number"
            class="form-control"
            name="mobile_no"
            placeholder="Enter Mobile No. : "
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Enter Email Address : </label>
          <input
            type="text"
            class="form-control"
            name="email"
            placeholder="Enter email address : "
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Enter Password : </label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Enter Password"
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Enter User Type : </label>
          <input
            type="number"
            class="form-control"
            name="userType"
            value="2"
          />
        </div>

        <input
          type="submit"
          value="create"
          class="btn btn-warning my-3 w-100"
        />
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>

<%- include('./base/footer.ejs') %>
